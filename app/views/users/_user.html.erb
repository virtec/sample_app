<li>
  <%= gravatar_for user, :size => 30 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? %>
  | <%= link_to "delete", user, :method => :delete, 
                                :confirm => "You sure? Delete #{user.name}?",
                                :title => "Delete #{user.name}" %>
  <% end %>
</li>
